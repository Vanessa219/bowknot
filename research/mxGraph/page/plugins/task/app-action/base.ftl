<div id="taskAppActionPanel">
    <span class="add-ico"></span>基本配置<div class="solid"></div>
    <table class="form" cellpadding="0" cellspacing="0">
        <tr>
            <th>
                操作名称：
            </th>
            <td>
                <input readonly="readonly" type="text" class="input" id="taskAppActionName"/>
            </td>
        </tr>
        <tr>
            <th>
                显示名称：
            </th>
            <td>
                <input type="text" class="input" id="taskAppActionShowName"/>
            </td>
        </tr>
        <tr>
            <th>
                操作说明：
            </th>
            <td>
                <input type="text" class="input" id="taskAppActionDesc"/>
            </td>
        </tr>
        <tr>
            <th>
                目标步骤：
            </th>
            <td>
                <select id="taskAppActionTargetStep"></select>
            </td>
        </tr>
    </table>
</div>
